<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/recipe_detail_top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:alpha="0.0"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/toolbar_title_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
android:paddingBottom="4dp"
            android:text="Hi, Mike!"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_top_bar_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recipe_detail_top_bar_layout" />

        <ImageView
            android:id="@+id/search_home"

            android:layout_width="43dp"

            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/ic_search_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_top_bar_layout"
            app:layout_constraintStart_toEndOf="@+id/toolbar_title_favorite"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/recipe_detail_share_icon"

            android:layout_width="61dp"

            android:layout_height="60dp"

            android:src="@drawable/ic_timeline_foreground"

            app:layout_constraintBottom_toBottomOf="@+id/search_home"
            app:layout_constraintStart_toEndOf="@+id/search_home"
            app:layout_constraintTop_toTopOf="@+id/recipe_detail_top_bar_layout"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/recipe_detail_close_icon"

            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/oval"
            android:src="@drawable/ic_student_woman_blond_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_share_icon"
            app:layout_constraintStart_toEndOf="@+id/recipe_detail_share_icon"
            app:layout_constraintTop_toTopOf="@id/recipe_detail_top_bar_layout"
            tools:ignore="ImageContrastCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>